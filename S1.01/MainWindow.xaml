        <Rectangle
            x:Name="plateau"
            Canvas.Left="-8"
            Canvas.Top="-20"
            Width="1142"
            Height="1000"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Opacity="0.5" />
